#include <stdio.h>

int main() {
    
float valor;
float soma = 0;
int qtd = 0;
    
    do{
        printf("Digite o valor do produto: ");
        scanf("%f", &valor);
        
        soma += valor;
        qtd++;
        
    } while (valor != 0);
    
    qtd--;
    
    printf("VocÃª adicionou %d itens no valor total de R$%.2f", qtd, soma);
    
    return 0;
}
